{
    "editor.rulers": [
        120
    ],
    "cursor.composer.shouldAutoAcceptDiffs": true,
    "makefile.configureOnOpen": true,
    "json.schemaDownload.enable": true,
    "cursor.general.globalCursorIgnoreList": [
        "**/.env",
        "**/.env.*",
        "**/credentials.json",
        "**/credentials.*.json",
        "**/secret.json",
        "**/secrets.json",
        "**/*.key",
        "**/*.pem",
        "**/*.pfx",
        "**/*.p12",
        "**/*.crt",
        "**/*.cer",
        "**/id_rsa",
        "**/id_dsa",
        "**/.ssh/id_*",
        "**/.cursor/mcp.json",
        "!**/.env.example",
    ],
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 120
    },
    "files.exclude": {
        "apps/extension/.chrome-profile": true,
        "apps/extension/.firefox-profile": true
    },
    "flake8.enabled": false
}