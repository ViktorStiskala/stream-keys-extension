---
import { key } from "../../styles/variants/key";

interface Props {
  action: string; // e.g., "r" or "s" - used for data-demo-key attribute
  label: string;
  description: string;
  ariaLabel: string;
}

const { action, label, description, ariaLabel } = Astro.props;
const styles = key({ size: "sm", interactive: true });
---

<div class="flex items-center gap-3">
  <button
    data-demo-key={action}
    class:list={["demo-key", styles.root(), "w-12 h-12 font-bold text-lg"]}
    style="box-shadow: 0 4px 0 var(--color-key-shadow), 0 6px 20px rgba(0, 0, 0, 0.3);"
    aria-label={ariaLabel}
  >
    {label}
  </button>
  <span class="text-sm text-text-muted">{description}</span>
</div>
