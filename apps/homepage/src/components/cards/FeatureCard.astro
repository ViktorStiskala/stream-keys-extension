---
import { Icon } from "astro-icon/components";
import Card from "../primitives/Card.astro";

interface Props {
  title: string;
  description?: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<Card interactive elevated>
  {icon && <Icon name={icon} class="mb-4 h-8 w-8 text-accent" />}
  <h3 class="mb-2 font-display text-lg font-semibold text-text">
    {title}
  </h3>
  {
    description && (
      <p class="text-sm leading-relaxed text-text-muted">{description}</p>
    )
  }
  <slot />
</Card>
