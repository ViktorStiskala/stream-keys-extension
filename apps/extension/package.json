{
  "name": "stream-keys",
  "version": "2.1.9",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run clean && rm -f .chrome-profile/{chrome.pid,SingletonLock,SingletonCookie,SingletonSocket} && vite dev",
    "dev:firefox": "npm run clean && mkdir -p build/dev/firefox && cp -r .firefox-profile build/dev/firefox/profile && BROWSER=firefox vite dev",
    "build": "vite build",
    "build:firefox": "BROWSER=firefox vite build",
    "build:safari": "uv run --directory scripts/build-safari python -m build_safari --dmg",
    "build:safari:rebuild-dmg": "uv run --directory scripts/build-safari python -m build_safari --rebuild-dmg",
    "build:safari:signed": "uv run --directory scripts/build-safari python -m build_safari --dmg --signed",
    "build:safari:appstore": "uv run --directory scripts/build-safari python -m build_safari --appstore",
    "open:safari": "open 'build/production/safari/xcode/DerivedData/Build/Products/Release/Stream Keys.app'",
    "clean": "rm -rf build/dev",
    "clean:all": "rm -rf build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,css,html}\"",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "package": "rm -rf build/production && npm run build && npm run build:firefox && cd build/production/chrome/extension && zip -r ../../stream-keys-chrome.zip . && cd ../../firefox/extension && zip -r ../../stream-keys-firefox.zip .",
    "pretest": "npm run build",
    "test": "vitest run",
    "new-version": "vite build --mode development",
    "test:watch": "vitest",
    "cleanup-html": "node scripts/cleanup-html.js",
    "setup-bookmarks": "node scripts/setup-bookmarks.js",
    "setup-bookmarks:replace": "node scripts/setup-bookmarks.js --replace"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.0",
    "@types/webextension-polyfill": "^0.12.4",
    "better-sqlite3": "^11.6.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "vite-plugin-web-extension": "^4.4.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
