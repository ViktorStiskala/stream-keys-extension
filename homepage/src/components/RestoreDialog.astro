---
// Visual demo of the position restore dialog - matches real dialog structure from dialog.ts
---

<div class="restore-dialog-demo w-full max-w-md">
  <!-- Dialog container - matches DialogStyles.container structure -->
  <div class="bg-bg-card border border-border rounded-2xl p-6 shadow-2xl">
    <!-- Header - matches DialogStyles.header -->
    <div class="flex items-center justify-between mb-4">
      <span class="text-xl font-semibold text-text">Restore Position</span>
      <button class="text-text-muted hover:text-text text-2xl leading-none transition-colors">Ã—</button>
    </div>
    
    <!-- Current time container - matches DialogStyles.currentTimeContainer -->
    <div class="flex items-center justify-between px-4 py-3 bg-white/5 border border-border rounded-lg mb-2">
      <span class="text-sm text-text-muted">Current time</span>
      <span class="text-lg font-semibold font-mono tabular-nums text-text">14:32</span>
    </div>
    
    <!-- Position list - matches DialogStyles.list -->
    <div class="flex flex-col gap-2">
      <!-- Load time position (key 0) - always first -->
      <button class="position-item relative flex items-center gap-3 px-4 py-3 pb-4 bg-surface border border-border rounded-lg text-left transition-colors hover:bg-bg-elevated">
        <span class="inline-flex items-center justify-center w-6 h-6 bg-border rounded text-sm font-semibold shrink-0">0</span>
        <span class="flex-1 font-mono tabular-nums text-text">00:00</span>
        <span class="text-xs text-text-muted shrink-0">start</span>
        <!-- Progress bar - matches DialogStyles.progressBar -->
        <div class="absolute bottom-1 left-4 right-4 h-[3px] bg-border rounded-full overflow-hidden">
          <div class="h-full bg-gold rounded-full" style="width: 0%"></div>
        </div>
      </button>
      
      <!-- Separator after load time - matches DialogStyles.separator -->
      <div class="h-px bg-linear-to-r from-transparent via-white/15 to-transparent -mx-2"></div>
      
      <!-- History position (key 1) -->
      <button class="position-item relative flex items-center gap-3 px-4 py-3 pb-4 bg-surface border border-border rounded-lg text-left transition-colors hover:bg-bg-elevated">
        <span class="inline-flex items-center justify-center w-6 h-6 bg-border rounded text-sm font-semibold shrink-0">1</span>
        <span class="flex-1 font-mono tabular-nums text-text">12:47</span>
        <span class="text-xs text-text-muted shrink-0">30s ago</span>
        <div class="absolute bottom-1 left-4 right-4 h-[3px] bg-border rounded-full overflow-hidden">
          <div class="h-full bg-gold rounded-full" style="width: 40%"></div>
        </div>
      </button>
      
      <!-- History position (key 2) -->
      <button class="position-item relative flex items-center gap-3 px-4 py-3 pb-4 bg-surface border border-border rounded-lg text-left transition-colors hover:bg-bg-elevated">
        <span class="inline-flex items-center justify-center w-6 h-6 bg-border rounded text-sm font-semibold shrink-0">2</span>
        <span class="flex-1 font-mono tabular-nums text-text">08:15</span>
        <span class="text-xs text-text-muted shrink-0">2m ago</span>
        <div class="absolute bottom-1 left-4 right-4 h-[3px] bg-border rounded-full overflow-hidden">
          <div class="h-full bg-gold rounded-full" style="width: 26%"></div>
        </div>
      </button>
      
      <!-- History position (key 3) -->
      <button class="position-item relative flex items-center gap-3 px-4 py-3 pb-4 bg-surface border border-border rounded-lg text-left transition-colors hover:bg-bg-elevated">
        <span class="inline-flex items-center justify-center w-6 h-6 bg-border rounded text-sm font-semibold shrink-0">3</span>
        <span class="flex-1 font-mono tabular-nums text-text">03:42</span>
        <span class="text-xs text-text-muted shrink-0">5m ago</span>
        <div class="absolute bottom-1 left-4 right-4 h-[3px] bg-border rounded-full overflow-hidden">
          <div class="h-full bg-gold rounded-full" style="width: 12%"></div>
        </div>
      </button>
    </div>
    
    <!-- Hint text - matches DialogStyles.hint -->
    <div class="text-xs text-text-muted text-center mt-4">
      Press 0-3 to select, Esc or R to close
    </div>
  </div>
</div>
