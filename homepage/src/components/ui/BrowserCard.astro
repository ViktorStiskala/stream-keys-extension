---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  icon: string;
  href: string;
  label?: string;
}

const { name, icon, href, label = "Download" } = Astro.props;
---

<a
  href={href}
  class="group p-6 rounded-2xl bg-bg-card border border-border hover:border-accent/50 transition-all duration-300"
>
  <Icon name={icon} class="w-16 h-16 mx-auto mb-4" />
  <h3 class="font-semibold mb-2">{name}</h3>
  <p class="text-sm text-text-muted">{label}</p>
</a>
