---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="feature-card group relative p-6 rounded-2xl bg-bg-card border border-border transition-all duration-300 hover:border-accent/50 hover:bg-surface">
  <!-- Glow effect on hover -->
  <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-accent/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  
  <div class="relative z-10">
    {icon && (
      <div class="mb-4 text-3xl">{icon}</div>
    )}
    <h3 class="text-lg font-semibold mb-2 font-display text-text">
      {title}
    </h3>
    <p class="text-sm text-text-muted leading-relaxed">
      {description}
    </p>
  </div>
  
  <slot />
</div>
